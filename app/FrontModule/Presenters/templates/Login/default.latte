{block content}

<div class="login-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="login-box">
                    <div class="login">
                        <div class="content">
                            <a n:href="Homepage:default"><img src="{$basePath}/assets/img/logo.png" alt="Logo" style="width: 150px;"></a>
                            <form n:name="loginForm">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <i class="fas fa-envelope-open"></i> <input class="form-control" placeholder="E-mail *" n:name="email" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <i class="fas fa-lock"></i> <input class="form-control" placeholder="Heslo *" n:name="password" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="link align-right">
                                            <a n:href="Login:forgetPassword">Zabudnuté heslo?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="row">
                                        <button n:name="submit">
                                            Prihlásiť
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div class="sign-up">
                                <p>
                                    Nemáte ešte zaregistrovanú svoju spoločnosť? <a n:href="Register:default">Registrujte sa</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>